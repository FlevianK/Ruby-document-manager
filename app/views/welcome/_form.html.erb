<%= form_with model: @document, local: true do |login| %>

  <div class="row">
    <div class="col s8 offset-m2">
      <p>
        <%= login.label :username %><br>
        <%= login.text_field :username %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col s8 offset-m2">
      <p>
        <%= login.label :email %><br>
        <%= login.text_field :email %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col s8 offset-m2">
      <p>
        <%= login.label :password %><br>
        <%= login.text_field :password %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col s8 offset-m2">
      <p>
        <%= login.label :confirm password %><br>
        <%= login.text_field :confirm_password %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col s7 offset-m5 login">
      <p>
      <%-# login.submit :value => "login", :class => "button" -%>
      <%= link_to 'Login', controller: 'documents' %>
      </p>
    </div>
  </div>
<% end %>